-- AUTO NIGHTMARE FLOW
task.spawn(function()
    -- Step 1 â†’ Masuk Lobby
    for i = 1,5 do
        pcall(function() RescueRemote:FireServer("EnterLobby") end)
        task.wait(3)
    end

    -- Step 2 â†’ Masuk Nightmare
    for i = 1,5 do
        pcall(function() RescueRemote:FireServer("Enter","Nightmare") end)
        task.wait(3)
